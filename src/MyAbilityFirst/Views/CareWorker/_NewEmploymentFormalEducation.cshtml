@model MyAbilityFirst.Models.CareWorkerDetailsViewModel


	<div>
		@Html.HiddenFor(model => model.EmploymentFormalEducations[Model.EmploymentFormalEducations.Count() - 1].ID)
		@Html.HiddenFor(model => model.EmploymentFormalEducations[Model.EmploymentFormalEducations.Count() - 1].CareWorkerID)

		<div class="form-group">
		@Html.Label("Education Level", htmlAttributes: new { @class = "control-label col-md-3" })
		<div class="col-md-9">
			@Html.DropDownListFor(
				m => m.EmploymentFormalEducations[Model.EmploymentFormalEducations.Count() - 1].FormalEducationID,
				new SelectList(Model.FormalEducationDropDownList.Items,
				"ID",
				"Name",
				Model.EmploymentFormalEducations[Model.EmploymentFormalEducations.Count() - 1].FormalEducationID),
				new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.EmploymentFormalEducations[Model.EmploymentFormalEducations.Count() - 1].FormalEducationID, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.EmploymentFormalEducations[Model.EmploymentFormalEducations.Count() - 1].FormalEducationID)
		</div>
	</div>

		<div class="form-group">
		@Html.LabelFor(model => model.EmploymentFormalEducations[Model.EmploymentFormalEducations.Count() - 1].Description, htmlAttributes: new { @class = "control-label col-md-3" })
		<div class="col-md-9">
			@Html.TextAreaFor(model => model.EmploymentFormalEducations[Model.EmploymentFormalEducations.Count() - 1].Description, htmlAttributes: new { @class = "form-control", @Rows = 4 })
			@Html.ValidationMessageFor(model => model.EmploymentFormalEducations[Model.EmploymentFormalEducations.Count() - 1].Description, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.EmploymentFormalEducations[Model.EmploymentFormalEducations.Count() - 1].Description)
		</div>
	</div>
</div>
<div id="div-new-employment-formal-education">
	<div class="col-md-12">
		<button id="btn-add-employment-formal-education" type="button" class="btn btn-default"
						onclick="AJAXPostReplace(
					'@(Url.Action("NewEmploymentFormalEducation", "CareWorker", null))',
					{EmploymentFormalEducations: @Json.Encode(Model.EmploymentFormalEducations)},
					'#btn-add-employment-formal-education',
					'#div-new-employment-formal-education',
					[]
			)">
			<i class="glyphicon glyphicon-plus"></i> Add Formal Education
		</button>
	</div>
</div>
