@model MyAbilityFirst.Models.CareWorkerDetailsViewModel

@for (int index = 0; index < Model.EmploymentReferences.Count(); index++)
{
<div>
	@Html.HiddenFor(model => model.EmploymentReferences[index].ID)
	@Html.HiddenFor(model => model.EmploymentReferences[index].CareWorkerID)

	<div class="form-group">
		@Html.LabelFor(model => model.EmploymentReferences[index].Description, htmlAttributes: new { @class = "control-label col-md-3" })
		<div class="col-md-9">
		@Html.TextAreaFor(model => model.EmploymentReferences[index].Description, htmlAttributes: new { @class = "form-control", @Rows = 4 })
		@Html.ValidationMessageFor(model => model.EmploymentReferences[index].Description, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.EmploymentReferences[index].Description)
	</div>
</div>
</div>
}
<div id="div-new-employment-reference">
	<div class="col-md-12">
		<button id="btn-add-employment-reference" type="button" class="btn btn-default"
						onclick="AJAXPostReplace(
					'@(Url.Action("NewEmploymentReference", "CareWorker", null))',
					{EmploymentReferences: @Json.Encode(Model.EmploymentReferences)},
					'#btn-add-employment-reference',
					'#div-new-employment-reference',
					[]
					)">
			<i class="glyphicon glyphicon-plus"></i> Add Employment Reference
		</button>
	</div>
</div>
