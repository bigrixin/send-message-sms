@using MyAbilityFirst.Domain.ClientFunctions
@model NewBookingViewModel


	@Html.ValidationSummary(true, "", new { @class = "text-danger" })

	<div class="form-group">
	@Html.LabelFor(model => model.CareWorkerID, new { @class = "control-label col-md-3" })
	<div class="col-md-9">
			@Html.DropDownListFor(model => model.CareWorkerID, Model.Shortlist, new { @class= "form-control" }, Model is UpdateBookingViewModel)
			@Html.ValidationMessageFor(model => model.CareWorkerID, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
	@Html.LabelFor(model => model.Start, new { @class = "control-label col-md-3" })
	<div class="col-md-9">
			<div class='input-group date datetimepicker'>
				@Html.EditorFor(model => model.Start, new { htmlAttributes = new { @class = "form-control", data_date_format = "DD MMM YYYY hh:mm A" } })
				<span class="input-group-addon">
					<span class="glyphicon glyphicon-calendar"></span>
				</span>
			</div>
			@Html.ValidationMessageFor(model => model.Start, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
	@Html.LabelFor(model => model.End, new { @class = "control-label col-md-3" })
	<div class="col-md-9">
			<div class='input-group date datetimepicker'>
				@Html.EditorFor(model => model.End, new { htmlAttributes = new { @class = "form-control", data_date_format = "DD MMM YYYY hh:mm A" } })
				<span class="input-group-addon">
					<span class="glyphicon glyphicon-calendar"></span>
				</span>
			</div>
			@Html.ValidationMessageFor(model => model.End, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
	@Html.LabelFor(model => model.Message, new { @class = "control-label col-md-3" })
	<div class="col-md-9">
			@Html.TextAreaFor(model => model.Message, htmlAttributes: new { @class = "form-control", @Rows = 8 })
		</div>
	</div>
